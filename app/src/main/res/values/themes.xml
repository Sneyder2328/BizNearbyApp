<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BizNearby" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2296F3</item>
        <item name="colorPrimaryVariant">#1465C0</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00A9FD</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#fff</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BizNearby.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BizNearby.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BizNearby.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomForm.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:minHeight">@dimen/input_height</item>
        <item name="android:textSize">@dimen/input_font_size</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/background_bordered</item>
    </style>

    <style name="CustomFormLabel">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#404040</item>
    </style>
</resources>